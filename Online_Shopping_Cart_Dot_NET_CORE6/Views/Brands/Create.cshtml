@model Online_Shopping_Cart_Dot_NET_CORE6.Models.Brand

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-md-8">
    <div class="ibox">

        <div class="ibox-body">
            <h1>Add New Brand</h1>
            <form asp-controller="Brands" asp-action="Create" method="post">
                <div class="form-group">
                    <label>Brand</label>
                    <input class="form-control" asp-for="Brand_Name" type="text"
                           placeholder="Enter Brand">
                </div>


                <div class="form-group">
                    <button class="btn btn-success" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
