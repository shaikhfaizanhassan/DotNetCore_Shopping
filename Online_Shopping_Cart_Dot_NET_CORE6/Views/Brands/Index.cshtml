@model IEnumerable<Online_Shopping_Cart_Dot_NET_CORE6.Models.Brand>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-md-12">
    <div class="ibox">

        <div class="ibox-body">
            <h3>View Brand</h3>
            <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brnd_Id)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.Brand_Name)
                            </td>
                            <td>
                                <a asp-controller="Brands" asp-action="Edit" asp-route-id="@item.Brnd_Id" class="btn btn-success">Edit</a>
                                <a asp-controller="Brands" asp-action="Delete" asp-route-id="@item.Brnd_Id" class="btn btn-danger">Delete</a>

                            </td>

                        </tr>
                    }
                </tbody>



            </table>

        </div>
    </div>
</div>
